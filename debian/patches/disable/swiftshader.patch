+++ b/BUILD.gn
@@ -521,7 +521,7 @@ group("gn_all") {
     ]
   }
 
-  if ((is_win || is_mac || is_linux || is_chromeos || is_fuchsia) &&
+  if (false &&
       (target_cpu == "x86" || target_cpu == "x64")) {
     deps += [
       "//third_party/swiftshader/src/Vulkan:icd_file",
--- a/third_party/angle/gni/angle.gni
