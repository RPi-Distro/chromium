+static base::Optional<VideoFrameLayout> MakeLayout(const FrameCopyMode& copy_mode, const FrameDesc * const frame)
+{
+  const unsigned int buf_n = frame->buffer_count();
+  const unsigned int plane_n = copy_mode.planes();
+
+  std::vector<VideoFrameLayout::Plane> planes;
+  std::vector<size_t> buf_sizes;
+
+  size_t offset = 0;
+  for (unsigned int i = 0; i != plane_n; ++i) {
+    size_t stride = frame->stride(i);
+    if (stride == 0)
+      stride = copy_mode.width_to_stride(i, frame->frame_size().width());
+
+    planes.emplace_back(stride, offset);
+    offset += stride * copy_mode.height_to_lines(i, frame->frame_size().height());
+    if (i + 1 < buf_n)
+    {
+      buf_sizes.emplace_back(offset);
+      offset = 0;
+    }
+  }
+  buf_sizes.emplace_back(offset);
+
+  return VideoFrameLayout::CreateWithPlanes(copy_mode.pixel_format(), frame->frame_size(), planes, buf_sizes, 0);
+}
